<%= link_to 'Back', cocktails_path, class: "btn btn-lg transparent back-link" %>
<div class="new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
      <%= simple_form_for(@cocktail, remote:true) do |f| %>
          <%= f.input :name, label: false, placeholder: "Name your cocktail" %>
          <%= f.simple_fields_for(:doses, @cocktail.doses) do |d| %>
              <%= d.input :ingredient_id, collection: Ingredient.all, label: false, prompt: "Select an ingredient" %>
              <%= d.input :description, placeholder: "1 shot, 5oz, a shitload?", label: false %>
          <% end %>
          <%= f.input :photo, label: false, class: "btn", style: "background: transparent; border: solid 1px white; color: white;" %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.button :submit, id: "submit-button", value: "Add ingredient" %>
      <% end %>
    </div>
  </div>
</div>
